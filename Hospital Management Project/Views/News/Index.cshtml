@using X.PagedList
@using X.PagedList.Mvc.Core

@model X.PagedList.IPagedList<NewsPost>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

<div id="main-content" class="blog-page">
    <div class="container">
        <div class="card-form">
            <div class="left-box">
                <div class="post-list">
                    @foreach (var item in Model)
                    {
                        <div class="card single_post">
                            <div class="body-cart">
                                <div class="img-post">
                                    <img class="d-block img-fluid" src="@item.PostImg" alt="Post Image" />
                                </div>
                                <div class="post-info">
                                    @if (item.User.Img == null)
                                    {
                                        <img src="~/img/person.png" alt="User Photo" class="user-photo" />
                                    }
                                    else
                                    {
                                        <img src="@item.User?.Img" alt="User Photo" class="user-photo" />
                                    }
                                    <span class="user-name">Posted by: @item.User.FullName</span>
                                    <span class="post-date">on @item.DatePosted.ToString("MMMM dd, yyyy hh:mm tt")</span>
                                </div>
                                <h3><a href="blog-details.html">@item.Title</a></h3>
                                <p class="post-content">@item.Content</p> <!-- Added a class here -->
                                <div class="social-icons">
                                    <a href="https://twitter.com" target="_blank" class="social-icon"><i class="fa fa-twitter"></i></a>
                                    <a href="https://instagram.com" target="_blank" class="social-icon"><i class="fa fa-instagram"></i></a>
                                    <a href="https://facebook.com" target="_blank" class="social-icon"><i class="fa fa-facebook"></i></a>
                                    @if (!User.IsInRole(UserRoles.Patient.ToString()))
                                    {
                                        <a class="dropdown-item" data-toggle="modal" data-target="#delete_patient_@item.Id" style="font-size: 14px;">
                                            <i class="fa fa-trash-o m-r-5"></i> Delete
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                        <div id="delete_patient_@item.Id" class="modal fade delete-modal" role="dialog">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-body text-center">
                                        <img src="~/assets/img/sent.png" alt="" width="50" height="46">
                                        <h3 style="font-size: 16px;">Are you sure you want to delete this Post?</h3>
                                        <div class="m-t-20">
                                            <button type="button" class="btn btn-white close-button" data-dismiss="modal" style="font-size: 12px;">Close</button>
                                            <form asp-action="ConfirmDelete" method="post" style="display:inline;">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-danger" style="font-size: 14px;">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div style="margin-top: 20px; text-align: center;">
    @if (Model.HasPreviousPage)
    {
        <a href="@Url.Action("Index", new { page = Model.PageNumber - 1 })" class="btn btn-outline-primary">Previous</a>
    }
    @if (Model.HasNextPage)
    {
        <a href="@Url.Action("Index", new { page = Model.PageNumber + 1 })" class="btn btn-outline-primary">See More</a>
    }
</div>
@if (User.IsInRole(UserRoles.Admin.ToString()) || User.IsInRole("Nurse") || User.IsInRole(UserRoles.Doctor.ToString()))
{
    <div class="card-form-button">
        <div class="body-form">
            <form asp-action="Index" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" name="Title" id="post-title" class="form-control" placeholder="Title" required />
                </div>
                <div class="form-group">
                    <textarea id="post-content" class="form-control" name="Content" placeholder="Content" required></textarea>
                </div>
                <div class="form-group">
                    <input type="file" id="post-image" class="form-control-file" name="postImage" />
                </div>
                <button type="submit" class="btn btn-royalblue">Add Post</button>
            </form>
        </div>
    </div>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
}

<style>
    .post-info {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
        margin-left: 15px;
    }

    .single_post .body {
        padding: 30px;
        margin-left: 15px;
    }

    h3 {
        margin-left: 15px;
    }

    .post-content {
        margin-left: 15px; /* Same margin as the title */
        margin-bottom: 15px; /* Ensures consistent spacing */
    }

    .social-icons {
        display: flex;
        justify-content: left;
        gap: 15px;
        margin-left: 15px;
        text-decoration: none;
        color: #333;
        font-size: 24px;
        transition: color 0.3s;
    }

    .card-form {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 30px auto;
        width: 100%;
    }

    .card-form-button {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 30px auto;
        width: 100%;
        max-width: 600px;
    }

        .card-form-button .body-form {
            padding: 20px;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 16px;
        margin-bottom: 15px;
    }

    .form-control-file {
        border-radius: 8px;
        margin-bottom: 15px;
    }

    textarea.form-control {
        height: 120px;
        resize: none;
    }

    .btn-royalblue {
        background-color: royalblue;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        border: none;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-royalblue:hover {
            background-color: darkblue;
        }

    .social-icon:hover {
        color: royalblue;
    }

    .card {
        background: #fff;
        transition: .5s;
        border: 0;
        margin-bottom: 30px;
        border-radius: .55rem;
        position: relative;
        width: 100%;
        box-shadow: 0 1px 2px 0 rgb(0 0 0 / 10%);
    }

        .card .body {
            color: #444;
            font-weight: 400;
        }

    .single_post .img-post {
        position: relative;
        overflow: hidden;
        max-height: 500px;
        margin-bottom: 30px;
    }

        .single_post .img-post > img {
            transform: scale(1.01);
            opacity: 1;
            transition: transform .4s ease, opacity .4s ease;
            max-width: 100%;
        }

    .user-photo {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 10px;
    }

    .user-name {
        font-weight: bold;
        margin-right: 15px;
    }

    .post-date {
        color: #888;
        font-size: 14px;
    }

    .left-box {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }

    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .close-button:hover {
        color: white; /* Change text color to white on hover */
    }
</style>
