    <title>Team Carousel</title>
    <style>
        /* Style adjustments for a comfortable design */
        .single-team {
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
            margin-bottom: 20px;
        }

        .t-bottom h2 {
            font-size: 1.2rem;
            margin: 10px 0;
        }

        .social-icons a {
            margin: 0 5px;
            color: #007bff;
            font-size: 1.1rem;
        }

            .social-icons a:hover {
                color: #0056b3;
            }

        .carousel-item img {
            height: 300px; /* Maintain consistent height */
            object-fit: cover; /* Maintain aspect ratio */
        }

        /* Center the carousel control buttons */
        .carousel-control-prev, .carousel-control-next {
            width: 5%;
            display: flex; /* Center the arrows */
            align-items: center; /* Center vertically */
        }

        /* Add margin to space the arrows from the images */
        .carousel-control-prev {
            left: -50px;
        }

        .carousel-control-next {
            right: -50px;
        }

        /* Move carousel indicators down */
        .carousel-indicators {
            bottom: -30px; /* Adjust this value to move indicators down */
        }

        /* Smooth transition for carousel */
        .carousel-item {
            transition: transform 0.5s ease, opacity 0.5s ease; /* Adjust the timing and easing function */
        }
    </style>
