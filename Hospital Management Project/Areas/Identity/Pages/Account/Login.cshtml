@page
@model LoginModel

@{
    ViewData["Title"] = "Login Here";
}

<section class="login section">
    <div class="container">
        <div class="inner">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login-left">
                        @* <img class="img" src="~/img/signup-bg.jpg" alt="Signup Image" /> *@
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="login-form">
                        <h2>@ViewData["Title"]</h2>
                        <p>
                            Didn't you have an account yet?
                            <a asp-area="Identity" asp-page="/Account/Register">Register Here</a>
                        </p>
                        <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                        <form class="login" method="post">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input asp-for="Input.Email" class="form-control" placeholder="Your Email" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input asp-for="Input.Password" class="form-control" placeholder="Password" type="password" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group login-btn">
                                        <button class="btn btn-primary w-100 btn-lg" type="submit">Login</button>
                                    </div>
                                    <!-- Google login button -->
                                    @* <div class="d-flex justify-content-between align-items-center mt-3">
                                        <a class="btn btn-outline-secondary w-100 btn-lg" href="~/signin-google">Login with Google</a>
                                    </div> *@
                                    <div class="d-flex justify-content-between align-items-center mt-3 mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="flexCheckDefault" value="">
                                            <label class="form-check-label" for="flexCheckDefault">Remember me</label>
                                        </div>

                                        <div>
                                            <a class="lost-pass" asp-page="./ForgotPassword">Lost your password?</a>
                                        </div>
                                    </div>

                                    
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}