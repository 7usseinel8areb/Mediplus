@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_HospitalLayout.cshtml";
}

<section class="register section">
    <div class="container">
        <div class="inner">
            <div class="row">
                <div class="col-lg-6">
                    <div class="register-left">
                       @*   <h2>Welcome to Our Platform</h2>
                         <p>Join us to enjoy the best services.</p> *@
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="register-form">
                        <h2>Register Here</h2>
                        <p>Already have an account? <a asp-area="Identity" asp-page="/Account/Login">Login Here</a></p>
                        <form class="form" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input asp-for="Input.FirstName" placeholder="First Name" type="text" class="form-control" />
                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input asp-for="Input.LastName" placeholder="Last Name" type="text" class="form-control" />
                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input asp-for="Input.Email" placeholder="Email" type="email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input asp-for="Input.Password" placeholder="Password" type="password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" type="password" class="form-control" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <select asp-for="Input.Gender" class="form-control">
                                            <option value="">Select Gender</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                            <option value="Other">Other</option>
                                        </select>
                                        <span asp-validation-for="Input.Gender" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input asp-for="Input.DateOfBirth" placeholder="Date of Birth" type="date" class="form-control" />
                                        <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input asp-for="Input.ZipCode" placeholder="Zip Code" type="text" class="form-control" />
                                        <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input asp-for="Input.Country" placeholder="Country" type="text" class="form-control" />
                                        <span asp-validation-for="Input.Country" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input asp-for="Input.City" placeholder="City" type="text" class="form-control" />
                                        <span asp-validation-for="Input.City" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label>Avatar</label>
                                    <div class="profile-upload">
                                        <div class="upload-img">
                                            <img src="~/assets/img/user.jpg" alt="Default Image" id="ImagePreview" />
                                        </div>
                                        <div class="upload-input">
                                            <input asp-for="Input.Img" type="file" class="form-control" id="imgfile" onchange="Image(event);" />
                                        </div>
                                    </div>
                                    <span asp-validation-for="Input.Img" class="text-danger"></span>
                                </div>
                                <div class="form-group login-btn">
                                    <button class="btn btn-primary btn-lg" id="registerBtn" type="submit" disabled>Register</button>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-3 mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" id="flexCheckDefault" type="checkbox" value="" onclick="toggleButton()" />
                                        <label class="form-check-label" for="flexCheckDefault">Yes, I agree with all</label>
                                    </div>
                                    <a class="terms" href="#">Terms & Conditions</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var Image = function (event) {
            var img = document.getElementById("ImagePreview");
            img.src = URL.createObjectURL(event.target.files[0]);
        }
        function toggleButton() {
            var checkBox = document.getElementById('flexCheckDefault');
            var registerBtn = document.getElementById('registerBtn');
            registerBtn.disabled = !checkBox.checked;
        }
    </script>
}
