@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container text-center my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <header>
                <img src="~/img/logout.jpg" class="img-fluid my-2" alt="Logout Image" style="width:450px;height:450px;"/>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <form class="form-inline d-flex justify-content-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="nav-link btn btn-primary text-white">Click here to Logout</button>
                    </form>
                }
                else
                {
                    <p class="text-success">You have successfully logged out of the application.</p>
                }
            </header>
        </div>
    </div>
</div>

