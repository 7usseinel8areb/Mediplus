@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "~/Views/Shared/_HospitalLayout.cshtml"; // Ensure this layout is consistent with your register page
}

<section class="profile section">
    <div class="container">
        <div class="inner">
            <h2>@ViewData["Title"]</h2>
            <partial name="_StatusMessage" for="StatusMessage" />
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="profile-form">
                        <form id="profile-form" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input asp-for="Input.FirstName" placeholder="First Name" type="text" class="form-control" required />
                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input asp-for="Input.LastName" placeholder="Last Name" type="text" class="form-control" required />
                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input asp-for="Input.PhoneNumber" placeholder="Phone Number" type="tel" class="form-control" required />
                                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <select asp-for="Input.Gender" class="form-control" asp-items="Model.GenderList" required>
                                            <option value="">Select Gender</option>
                                        </select>
                                        <span asp-validation-for="Input.Gender" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input asp-for="Input.ZipCode" placeholder="Zip Code" type="text" class="form-control" required />
                                        <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input asp-for="Input.Country" placeholder="Country" type="text" class="form-control" required />
                                        <span asp-validation-for="Input.Country" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <input asp-for="Input.City" placeholder="City" type="text" class="form-control" required />
                                        <span asp-validation-for="Input.City" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Avatar</label>
                                        <input asp-for="Input.Img" type="file" class="form-control" onchange="Image(event)" />
                                        <span asp-validation-for="Input.Img" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    @if (!string.IsNullOrEmpty(Model.Input.ExistingImageUrl))
                                    {
                                        <img id="ImagePreview" src="~/@Model.Input.ExistingImageUrl" alt="Profile Image" style="max-width: 150px; max-height: 150px;" />
                                    }
                                </div>

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <button type="submit" id="updateBtn" class="btn btn-primary btn-lg">Update Profile</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var Image = function (event) {
            var img = document.getElementById("ImagePreview");
            img.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
}
