@model HospitalSystem.Core.Entities.Doctor


<form asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Specialization" class="control-label"></label>
        <input asp-for="Specialization" class="form-control" />
        <span asp-validation-for="Specialization" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Current Profile Image:</label>
        @if (!string.IsNullOrEmpty(Model.Img))
        {
            <img src="~/images/@Model.Img" alt="Profile Image" width="100" height="100" />
        }
        else
        {
            <p>No profile image</p>
        }
    </div>

    <!-- File Input for New Image Upload -->
    <div class="form-group">
        <label for="Img" class="control-label">Upload New Profile Image (optional)</label>
        <input type="file" name="file" class="form-control" />
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary">Update</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
