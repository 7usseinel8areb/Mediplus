@model IEnumerable<WorkingHours>

@{
    ViewData["Title"] = "Index";
}

<div class="create-button-container">
    <a class="create-button" asp-action="Create">Create New</a>
</div>
<br />

<table>
    <thead>
        <tr>
            <th>Day</th>
            <th>Start Hour</th>
            <th>End Hour</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Day.ToShortDateString()</td>
                <td>@item.StartHour</td>
                <td>@item.EndHour</td>
                <td>
                    <a class="action-link edit-link" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="action-link delete-link" data-toggle="modal" data-target="#delete_doctor_@item.Id">
                        <i class="fa fa-trash-o m-r-5"></i> Delete
                    </a>
                </td>
            </tr>
            <div id="delete_doctor_@item.Id" class="modal fade delete-modal" role="dialog">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-body text-center">
                            <img src="~/assets/img/sent.png" alt="" width="50" height="46">
                            <h3>Are you sure you want to delete this Working Hours?</h3>
                            <div class="m-t-20">
                                <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                                <form asp-action="ConfirmDelete" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- End of Modal -->
        }
    </tbody>
</table>

<style>
    /* Styling for the create button */
    .create-button-container {
        text-align: center;
        margin: 20px 0;
    }

    .create-button {
        background-color: #ffffff; /* White background */
        color: #007BFF; /* Blue text */
        padding: 12px 25px;
        font-size: 18px;
        border-radius: 50px;
        text-decoration: none;
        font-family: 'Poppins', sans-serif; /* Cute font */
        transition: background-color 0.3s ease, color 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        border: 2px solid #007BFF;
    }

        .create-button:hover {
            background-color: #007BFF; /* Blue background on hover */
            color: white; /* White text on hover */
        }

    /* Basic table styling */
    table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    th {
        background-color: #e0f7fa; /* Light blue background */
        color: #007BFF; /* Blue text */
        padding: 12px;
        text-align: left;
        font-weight: bold;
        font-size: 16px;
        font-family: 'Poppins', sans-serif;
    }

    td {
        padding: 12px;
        border-bottom: 1px solid #ddd;
        font-family: 'Poppins', sans-serif;
    }

    tr:hover {
        background-color: #f9f9f9;
    }

    /* Action link styling */
    .action-link {
        text-decoration: none;
        color: #007BFF;
        font-weight: bold;
        font-family: 'Poppins', sans-serif;
        transition: color 0.3s ease;
    }

        .action-link:hover {
            color: #0056b3;
        }

    .edit-link:hover {
        color: #4CAF50;
    }

    .delete-link:hover {
        color: #ff5252;
    }
</style>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
