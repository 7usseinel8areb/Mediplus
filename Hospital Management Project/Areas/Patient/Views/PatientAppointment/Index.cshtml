@model IEnumerable<Appointment>

@{
    ViewData["Title"] = "Index";

}

<div class="main-wrapper">
<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-4 col-3">
                <h4 class="page-title">Appointments</h4>
            </div>
            
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                        <table class="table table-striped custom-table custom-table datatable mb-0">
                        <thead>
                            <tr>
                                    
                                    <th>Patient Name</th>
                                    <th>Age</th>
                                    <th>Doctor Name</th>
                                
                                <th class="text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">No Appointment records available</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            
                                            <td>@item.Patient?.FullName</td>
                                            <td>@item.CalculateAge()</td>
                                            <td>@item.Doctor?.FullName</td>

                                            <!-- Action Icon and Dropdown -->
                                            <td class="text-right">
                                                <div class="dropdown dropdown-action">
                                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                        <i class="fa fa-ellipsis-v"></i>
                                                    </a>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.AppointmentID"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                        <a class="dropdown-item" data-toggle="modal" data-target="#delete_Appointment_@item.AppointmentID">
                                                            <i class="fa fa-trash-o m-r-5"></i> Delete
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>

                                        <div id="delete_Appointment_@item.AppointmentID" class="modal fade delete-modal" role="dialog">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-body text-center">
                                                        <img src="~/assets/img/sent.png" alt="" width="50" height="46">
                                                        <h3>Are you sure you want to delete this Appointment?</h3>
                                                        <div class="m-t-20">
                                                            <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                                                            <form asp-action="ConfirmDelete" method="post" style="display:inline;">
                                                                <input type="hidden" name="id" value="@item.AppointmentID" />
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    }
                                }
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<div class="sidebar-overlay" data-reff=""></div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}