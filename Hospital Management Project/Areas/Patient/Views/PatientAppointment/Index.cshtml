@model X.PagedList.IPagedList<Appointment>

<div class="breadcrumbs overlay">
    <div class="container">
        <div class="bread-inner">
            <div class="row">
                <div class="col-12">
                    <h2>Your Appointments</h2>
                    <ul class="bread-list">
                        <li><a href="~/Home">Home</a></li>
                        <li><i class="icofont-simple-right"></i></li>
                        <li class="active">Appointments</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Appointment Reminder</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <style>
        .card {
            border-radius: 10px;
            background-color: #f9f9f9;
            margin-bottom: 20px;
            padding: 10px; /* Reduced padding */
            height: auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 400px; /* Set a max width to make the card smaller */
            margin: 10px; /* Margin for spacing between cards */
        }

        .rounded-circle {
            border: 2px solid #ddd;
            margin-right: 10px;
        }

        .appointment-header {
            font-weight: bold;
            font-size: 1.3em; /* Keep the header size */
            margin-bottom: 10px; /* Adjust margin */
            color: #007bff; /* Changed color to blue */
        }

        .doctor-info {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .container {
            margin-top: 20px;
        }

        .appointment-details {
            margin-top: 10px; /* Adjusted margin */
            font-size: 0.9em; /* Slightly smaller font size */
        }

        .calendar-icon {
            color: #007bff; /* Blue color for the icon */
            margin-right: 5px; /* Reduced margin */
            font-size: 1.2em; /* Smaller icon size */
        }

        .doctor-info .calendar-icon {
            margin-left: 10px; /* Add margin to the left of the icon */
        }

        /* Added spacing between attributes */
        .attribute {
            margin-bottom: 5px; /* Space between attributes */
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            @foreach (var appointment in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="doctor-info">
                            <img src="~/@appointment.Doctor?.Img" alt="Doctor Photo" class="rounded-circle" width="50" height="50">
                            <h6 class="ml-3">Doctor: @appointment.Doctor?.FullName <i class="fas fa-calendar-alt calendar-icon"></i></h6>
                        </div>
                        <p class="appointment-details">
                            <strong>Department:</strong> <span class="attribute">@appointment.Department?.DepartmentName</span><br />
                            <strong>Start Date Time:</strong> <span class="attribute">@appointment.StartDateTime?.ToString("dddd, MMMM d, yyyy h:mm tt")</span><br />
                            <strong>End Date Time:</strong> <span class="attribute">@appointment.EndDateTime?.ToString("dddd, MMMM d, yyyy h:mm tt")</span>
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Pagination controls -->
    <div class="pagination-container" style="text-align: center;">
        @if (Model.HasPreviousPage)
        {
            <a href="@Url.Action("Index", new { page = Model.PageNumber - 1 })" class="btn btn-outline-primary">Previous</a>
        }
        @if (Model.HasNextPage)
        {
            <a href="@Url.Action("Index", new { page = Model.PageNumber + 1 })" class="btn btn-outline-primary">See More</a>
        }
    </div>
    <br />
</body>
</html>
