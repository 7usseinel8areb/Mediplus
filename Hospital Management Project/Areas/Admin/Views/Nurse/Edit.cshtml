@model NurseVM

@{
    ViewData["Title"] = "Edit";
    Layout = "_NurseLayout";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h4 class="page-title text-center mb-4">Edit Nurse</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input hidden asp-for="ID" />
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Email <span class="text-danger">*</span></label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="Enter Email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Password <span class="text-danger">*</span></label>
                            <input asp-for="PasswordHash" class="form-control" type="password" placeholder="Enter Password" required />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="DateOfBirth" class="control-label"></label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="gen-label">Gender:</label>
                            <div class="form-check-inline">
                                <label class="form-check-label">
                                    <input type="radio" asp-for="Gender" name="gender" value="Male" class="form-check-input" id="Male"> Male
                                </label>
                                <label class="form-check-label ml-3">
                                    <input type="radio" asp-for="Gender" name="gender" value="Female" class="form-check-input" id="Female"> Female
                                </label>
                            </div>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label>City</label>
                            <input asp-for="City" class="form-control" placeholder="Enter City" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Postal Code</label>
                            <input asp-for="ZipCode" class="form-control" type="text" placeholder="Enter Postal Code" required />
                            <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Phone</label>
                            <input asp-for="PhoneNumber" class="form-control" type="text" placeholder="Enter Phone Number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="DepartmentID">Department Name</label>
                            <select asp-for="DepartmentID" asp-items="ViewBag.dept" class="form-control">
                                <option value="">-- Select Department --</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="DoctorID">Doctor</label>
                            <select asp-for="DoctorID" asp-items="ViewBag.doctors" class="form-control">
                                <option value="">-- Select Doctor --</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Avatar</label>
                            <div class="profile-upload">
                                <div class="upload-img">
                                    <img src="~/@Model.Img" alt="Default Image" id="ImagePreview" />
                                </div>
                                <div class="upload-input">
                                    <input asp-for="Img" type="file" class="form-control" id="imgfile" onchange="Image(event);" name="Img" />
                                </div>
                                <span asp-validation-for="Img" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                 
                    <div class="text-center mt-4">
                        <button class="btn btn-primary submit-btn" type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var Image = function (event) {
            var img = document.getElementById("ImagePreview");
            img.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
}

<style>
    .form-control {
        border-radius: 10px;
        padding: 10px;
        font-size: 14px;
    }

    .form-check-input {
        margin-left: 5px;
    }

    .form-check-inline {
        margin-top: 5px;
    }

    .submit-btn {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 8px;
        transition: background-color 0.3s;
    }

    .submit-btn:hover {
        background-color: #0056b3;
    }

    .profile-upload {
        display: flex;
        align-items: center;
    }

    .upload-img img {
        border-radius: 50%;
        width: 100px;
        height: 100px;
        margin-right: 15px;
    }

    .upload-input {
        flex-grow: 1;
    }

    .text-danger {
        margin-top: 5px;
        font-size: 12px;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .text-center {
        text-align: center;
    }
</style>
