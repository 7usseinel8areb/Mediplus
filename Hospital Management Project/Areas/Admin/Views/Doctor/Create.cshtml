@model Doctor
@{
    Layout = "_docLayout";
}

<br />
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <h4 class="page-title text-center mb-4">Add Doctor</h4>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" method="post" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter Name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter Name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Password <span class="text-danger">*</span></label>
                        <input asp-for="PasswordHash" class="form-control" type="password" required />
                        <span  class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="DepartmentId" class="control-label">Department</label>
                        <select asp-for="DepartmentId" class="form-control form-control-lg" asp-items="ViewBag.Departments">
                            <option value="">Select Department</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="ZipCode" class="control-label"></label>
                        <input asp-for="ZipCode" class="form-control" placeholder="Enter Zip Code" />
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control" placeholder="Enter City" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Gender" class="control-label d-block">Gender</label>
                        <div class="form-check form-check-inline">
                            <input asp-for="Gender" class="form-check-input" type="radio" value="0" id="genderMale" />
                            <label class="form-check-label" for="genderMale">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="Gender" class="form-check-input" type="radio" value="1" id="genderFemale" />
                            <label class="form-check-label" for="genderFemale">Female</label>
                        </div>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Avatar</label>
                        <div class="profile-upload">
                            <div class="upload-img">
                                <img src="~/assets/img/user.jpg" alt="Default Image" id="ImagePreview" />
                            </div>
                            <div class="upload-input">
                                <input asp-for="Img" type="file" class="form-control" id="imgfile" onchange="Image(event);" name="Img" />
                            </div>
                            <span asp-validation-for="Img" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button class="btn btn-primary submit-btn" type="submit">Create</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-link">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            var Image = function (event) {
                var img = document.getElementById("ImagePreview");
                img.src = URL.createObjectURL(event.target.files[0]);
            }
        </script>
    }
}
<style>
    .submit-btn {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 8px;
        transition: background-color 0.3s;
    }
</style>