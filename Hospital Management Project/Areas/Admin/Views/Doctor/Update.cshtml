@model DoctorVM
@{
    Layout = "_docLayout";
}
<br />
<br />
<br />
<br />
<br />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Update" method="post" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
                <!-- First Row: Name and Email -->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter Name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter Name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <!-- Second Row: Password and Department -->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label">Password <span class="text-danger">*</span></label>
                        <input asp-for="PasswordHash" class="form-control" type="password" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="DepartmentId" class="control-label">Department</label>
                        <select asp-for="DepartmentId" class="form-control form-control-lg" asp-items="ViewBag.Departments">
                            <option value="">Select Department</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                </div>

                <!-- Third Row: ZipCode and City -->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="ZipCode" class="control-label"></label>
                        <input asp-for="ZipCode" class="form-control" placeholder="Enter Zip Code" />
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control" placeholder="Enter City" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>

                <!-- Fourth Row: Gender and DateOfBirth -->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Gender" class="control-label d-block">Gender</label>
                            @if (Model.Gender ==HospitalSystem.Core.Enums.Gender.Male)
                            {
                            <div class="form-check form-check-inline">
                                <input asp-for="Gender" class="form-check-input" type="radio" value="0" id="genderMale" checked/>
                                <label class="form-check-label" for="genderMale">Male</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="Gender" class="form-check-input" type="radio" value="1" id="genderFemale" />
                                <label class="form-check-label" for="genderFemale">Female</label>
                            </div>
                            }
                        @if (Model.Gender == HospitalSystem.Core.Enums.Gender.Female)
                        {
                            <div class="form-check form-check-inline">
                                <input asp-for="Gender" class="form-check-input" type="radio" value="0" id="genderMale" checked />
                                <label class="form-check-label" for="genderMale">Male</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input asp-for="Gender" class="form-check-input" type="radio" value="1" id="genderFemale" checked />
                                <label class="form-check-label" for="genderFemale">Female</label>
                            </div>
                        }

                           
                      
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>

                <!-- Fifth Row: PhoneNumber and Avatar Image -->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Avatar</label>
                        <div class="profile-upload">
                            <div class="upload-img">
                                <img src="~/@Model.Img" alt="Default Image" id="ImagePreview" />
                            </div>
                            <div class="upload-input">
                                <input asp-for="Img" type="file" class="form-control" id="imgfile" onchange="Image(event);" name="Img" />
                            </div>
                            <span asp-validation-for="Img" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary btn-block">Update</button>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-link">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            var Image = function (event) {
                var img = document.getElementById("ImagePreview");
                img.src = URL.createObjectURL(event.target.files[0]);
            }
        </script>
    }
}
