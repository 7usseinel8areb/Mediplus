@model HospitalSystem.Core.Entities.Doctor

<h2>Delete Doctor</h2>

<div>
    <h4>Are you sure you want to delete this doctor?</h4>
    <div>
        <h5>Name: @Model.FullName</h5>
        <p>Zip Code: @Model.ZipCode</p>
        <p>City: @Model.City</p>
        <p>Gender: @Model.Gender</p>
        <p>Date of Birth: @Model.DateOfBirth.ToShortDateString()</p>
        @if (!string.IsNullOrEmpty(Model.Img))
        {
            <img src="~/images/@Model.Img" alt="Profile Image" width="100" height="100" />
        }
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
