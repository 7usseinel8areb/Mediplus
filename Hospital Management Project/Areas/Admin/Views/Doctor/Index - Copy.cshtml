@model IEnumerable<Doctor>

@{
    Layout = "_docLayout";  // Use your desired layout here.
}

<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-sm-4 col-3">
                    <h4 class="page-title">Doctors</h4>
                </div>
                <div class="col-sm-8 col-9 text-right m-b-20">
                    <a href="~/Doctors/Doctor/Create" class="btn btn-primary btn-rounded float-right">
                        <i class="fa fa-plus"></i> Add Doctor
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-border table-striped custom-table datatable mb-0">
                            <thead>
                                <tr>
                                    <th>Doctor Name</th>
                                    <th>Specialization</th>
                                    <th>Age</th>
                                    <th>Gender</th>
                                    <th>City</th>
                                    <th>Zip Code</th>
                                    <th>Email</th>
                                    <th class="text-right">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="8" class="text-center text-muted">No doctor records available</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var doctor in Model)
                                    {
                                        <tr>
                                            <td>
                                                <img width="28" height="28" src="~/@doctor.Img" class="rounded-circle m-r-5" alt="">
                                                @doctor.Name
                                            </td>
                                            <td>@doctor.Age()</td>
                                            <td>@doctor.Gender</td>
                                            <td>@doctor.City</td>
                                            <td>@doctor.ZipCode</td>
                                            <td>@doctor.Email</td>
                                            <!-- Action Icon and Dropdown -->
                                            <td class="text-right">
                                                <div class="dropdown dropdown-action">

                                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                        <i class="fa fa-ellipsis-v"></i>
                                                    </a>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a class="dropdown-item" asp-action="Update" asp-route-id="@doctor.Id">
                                                            <i class="fa fa-pencil m-r-5"></i> Edit
                                                        </a>
                                                        <a class="dropdown-item" data-toggle="modal" data-target="#delete_doctor_@doctor.Id">
                                                            <i class="fa fa-trash-o m-r-5"></i> Delete
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>

                                        <!-- Modal for Confirm Delete -->
                                        <div id="delete_doctor_@doctor.Id" class="modal fade delete-modal" role="dialog">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-body text-center">
                                                        <img src="~/assets/img/sent.png" alt="" width="50" height="46">
                                                        <h3>Are you sure you want to delete this Doctor?</h3>
                                                        <div class="m-t-20">
                                                            <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                                                            <form asp-action="ConfirmDelete" method="post" style="display:inline;">
                                                                <input type="hidden" name="id" value="@doctor.Id" />
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="sidebar-overlay" data-reff=""></div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
