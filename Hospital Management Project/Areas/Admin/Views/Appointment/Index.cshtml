@model IEnumerable<Appointment>

@{
    ViewData["Title"] = "Appointments";
    Layout = "_AppointmentLayout";
}

<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-sm-4 col-3">
                    <h4 class="page-title">Appointments</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-border table-striped custom-table datatable mb-0">
                            <thead>
                                <tr>
                                    <th>Start Date & Time</th>
                                    <th>End Date & Time</th>
                                    <th>Patient</th>
                                    <th>Doctor</th>
                                    <th>Department</th>
                                    <th class="text-right">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">No Appointments available</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.StartDateTime</td>
                                            <td>@item.EndDateTime</td>
                                            <td>@item.Patient.FullName</td>
                                            <td>@item.Doctor.FullName</td>
                                            <td>@item.DeptId</td>

                                            <!-- Status Logic -->
                                           @*  @if (item.EndDateTime < DateTime.Now)
                                            {
                                                <td><span class="custom-badge status-red">Inactive</span></td>
                                            }
                                            else
                                            {
                                                <td><span class="custom-badge status-green">Active</span></td>
                                            } *@

                                            <!-- Action Icon and Dropdown -->
                                            <td class="text-right">
                                                <div class="dropdown dropdown-action">
                                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                        <i class="fa fa-ellipsis-v"></i>
                                                    </a>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a class="dropdown-item" data-toggle="modal" data-target="#delete_appointment_@item.AppointmentID">
                                                            <i class="fa fa-trash-o m-r-5"></i> Delete
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>

                                        <!-- Modal for Confirm Delete -->
                                        <div id="delete_appointment_@item.AppointmentID" class="modal fade delete-modal" role="dialog">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-body text-center">
                                                        <img src="~/assets/img/sent.png" alt="" width="50" height="46">
                                                        <h3>Are you sure you want to delete this Appointment?</h3>
                                                        <div class="m-t-20">
                                                            <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                                                            <form asp-action="ConfirmDelete" method="post" style="display:inline;">
                                                                <input type="hidden" name="id" value="@item.AppointmentID" />
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="sidebar-overlay" data-reff=""></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
