@model Departments

@{
    Layout = "_deptLayout";
}
<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h4 class="page-title">Edit Department</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input hidden asp-for="Id" />
                    <div class="form-group">
                        <label>Department Name <span class="text-danger">*</span></label>
                        <input asp-for="DepartmentName" class="form-control" type="text" required />
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>
                    <div class="profile-upload">
                        <div class="upload-img">
                            <img src="~/assets/img/user.jpg" alt="Default Image" id="ImagePreview" />
                        </div>
                        <div class="upload-input">
                            <input asp-for="Img" type="file" class="form-control" id="imgfile" onchange="Image(event);" name="Img" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Description <span class="text-danger">*</span></label>
                        <textarea asp-for="Description" class="form-control" cols="30" rows="4" required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="m-t-20 text-center">
                        <button class="btn btn-primary submit-btn" type="submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var Image = function (event) {
            var img = document.getElementById("ImagePreview");
            img.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
}
