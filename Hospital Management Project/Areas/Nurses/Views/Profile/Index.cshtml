@{
    Layout = "_HospitalLayout";
}
@model Nurse
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

<section class="vh-100" style="background-color: #f4f5f7;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-stretch h-100">
            <div class="col-md-4 p-0">
                <div class="profile-card" style="border-radius: .5rem; background: steelblue; height: 480px;">

                    <div class="row g-0 text-center text-white align-items-center" style="height: 100%;">
                        <div class="col">
                            <img src="~/@Model.Img"
                                 alt="Avatar" class="img-fluid my-3" style="width: 90%; height: 70%; object-fit: cover; border-radius: .5rem; margin: 0 auto;" />
                            <h5 style="color:white !important; font-family: 'Poppins', sans-serif;" class="mt-3">@Model.FullName</h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8 p-0">
                <div class="info-card d-flex align-items-center" style="border-radius: .5rem; height: 480px;">
                    <div class="card-body text-left p-4">
                        <div class="row pt-1">
                            <div class="col-6 mb-3">
                                <h6 style="font-size: 1.2rem;">ِAge</h6>
                                <p class="text-muted" style="font-size: 1rem;">@Model.Age()</p>
                            </div>
                            <div class="col-6 mb-3">
                                <h6 style="font-size: 1.2rem;">Phone</h6>
                                <p class="text-muted" style="font-size: 1rem;">@Model.PhoneNumber</p>
                            </div>
                        </div>
                        <div class="row pt-1">
                            <div class="col-6 mb-3">
                                <h6 style="font-size: 1.2rem;">Department Name</h6>
                                <p class="text-muted" style="font-size: 1rem;">@Model.Departments.DepartmentName</p>
                            </div>
                            <div class="col-6 mb-3">
                                <h6 style="font-size: 1.2rem;">Doctor Name</h6>
                                <p class="text-muted" style="font-size: 1rem;">@Model.Doctor.FullName</p>
                            </div>
                            <div class="col-6 mb-3">
                                <h6 style="font-size: 1.2rem;">City</h6>
                                <p class="text-muted" style="font-size: 1rem;">@Model.City</p>
                            </div>
                            <div class="col-6 mb-3">
                                <h6 style="font-size: 1.2rem;">Zip Code</h6>
                                <p class="text-muted" style="font-size: 1rem;">@Model.ZipCode</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .profile-card {
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        height: 480px;
        background-color: steelblue; 
    }

    .info-card {
        background-color: #ffffff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        height: 480px;
    }

    h6 {
        font-weight: bold;
    }

    .text-muted {
        color: #6c757d;
    }

    .img-fluid {
        border-radius: .5rem;
        margin: 0 auto;
    }

    @@media (max-width: 768px) {
        .col-md-4, .col-md-8 {
            text-align: center;
        }
    }
</style>
